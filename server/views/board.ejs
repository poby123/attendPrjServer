<%- include('./partials/header.ejs'); %>
<section class="edit-content">
  <div class="edit-content-container">
    <a id="editToggleButton"><i id="editToggleButtonIcon" class="far fa-edit"></i></a>
    <table>
      <th>Name</th>
      <th>낮모임</th>
      <th>화찬</th>
      <th class="editToggleTarget">-</th>
      <% for(let i=0;i<results.length;i++){
          let flagSun = '';
          let flagTue = '';
          if(results[i].meeting === 1) flagSun = 'checked';
          if(results[i].tue === 1) flagTue = 'checked';
          %>
      <tr>
        <td><%=results[i].name%></td>
        <input type="hidden" id='<%=i%>' value="<%=results[i].name%>">
        <td><input type="checkbox" id="<%=results[i].name%>sun" <%=flagSun%> /></td>
        <td><input type="checkbox" id="<%=results[i].name%>tue" <%=flagTue%> /></td>
        <td class="editToggleTarget"><a class="deleteButton" id="<%=results[i].name%>"><i
              class="fas fa-user-minus"></i></a></td>
      </tr>
      <%}%>
    </table>
    <%for(let i=0;i<10;i++){%><input class="addToggleTarget" id="addedMemberName_<%=i%>" type="text"
        placeholder="이름" /><%}%>
    <button class="editToggleTarget" id="memberAddButton"><i class="fas fa-plus"></i></button>
    <button class="addToggleTarget" id="addSaveButton">기관원 추가저장</button>
    <button type="button" id="submit">저장</button>
  </div>
</section>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://kit.fontawesome.com/02656a2617.js"></script>
<script src="/javascripts/assemble.js" charset="utf-8"></script>
<script type="text/javascript">

  //declare global varable and default setting.
  let msg = '<%=msg%>';
  let editToggleState = false;
  let addIndex = 0;
  let shouldIncreaseIndex = true;
  if (msg !== '') {
    alert(msg);
    msg = '';
  }

  $('.editToggleTarget').css('display', 'none');
  $('.addToggleTarget').css('display', 'none');

  //handle editting toggle button
  $('#editToggleButton').click(() => {
    editToggleState = !editToggleState;
    if (editToggleState) {
      $('.editToggleTarget').show();
      $('#editToggleButtonIcon').attr('class', 'fas fa-edit');
      $('#submit').css('display', 'none');
    }
    else {
      $('.editToggleTarget').css('display', 'none');
      $('#editToggleButtonIcon').attr('class', 'far fa-edit');
      $('.addToggleTarget').css('display', 'none');
      $('#addSaveButton').css('display', 'none');
      $('#submit').show();
      shouldIncreaseIndex = false;
    }
  });

  //handle member add button
  $('#memberAddButton').click(() => {

    $('#addSaveButton').show();
    for (let i = 0; i <= addIndex; i++) { $('#addedMemberName_' + i).show(); } if (shouldIncreaseIndex && addIndex + 1 <= 9) {
      ++addIndex;
    } shouldIncreaseIndex = true;
  }); //handle event for saving added member
  $('#addSaveButton').click(() => {
    let targetObject = [];
    for (let i = 0; i < 10; i++) { let name = $('#addedMemberName_' + i).val(); if (name) targetObject.push(name); } $.ajax({
      url: '/class/editClassMember/add', type: 'POST', contentType: 'application/json', data:
        JSON.stringify(targetObject), dataType: 'json', success: function (result) {
          if (!result.result) {
            alert('불편을 드려
          죄송합니다...저장에 실패했습니다ㅜ 동명번호를 맞게 작성하셨는지 확인해주세요!'); }else{ let currentPage=window.location.href; alert('저장에
          성공했습니다!'); location.replace(currentPage); } } }); }); //handle event for deleting class member
          $('.deleteButton').click(function () {
              let id = $(this).attr('id'); if (confirm('출석체크 도중, 멤버를 편집하는 경우, 출석체크가 저장되지
          않습니다. ' +
          id + ' 님을 정말로 삭제하시겠습니까?')) { location.href = "/class/editClassMember/delete?target=" + id; } else { return; }
            }); //handle event for saving class attendance $('#submit').click(function(){ let targetObject=[]; let
            length =<%=results.length %>; for (let i = 0; i < length; i++) {
              let rowObject = []; let name = $('#' + i).val();
              rowObject.push(name); //sunday if($('#'+name+'sun').is(":checked")==true){ rowObject.push(true); }else{
              rowObject.push(false);
            } //tuesday if($('#'+name+'tue').is(":checked")==true){ rowObject.push(true); }else{
            rowObject.push(false);
          } targetObject.push(rowObject);
        } console.log(targetObject); $.ajax({
          url: '/class/board/save', type: 'PUT', contentType: 'application/json', data: JSON.stringify(targetObject),
          dataType: 'json', success: function (result) { // console.log(result.result); if(result.result){ if(confirm('저장에
            성공했습니다.교회 출석체크 페이지로 이동하시겠습니까 ? 확인을 누르시면 자동으로 로그아웃 됩니다.')){ location.href=' / auth / signout ? link = true' ; } }else{
            alert('저장에 실패했습니다.');
          }
        } }); targetObject = []; //this init is needed! }); //handle event for saving class
    attendance end </script>
          </body>

          </html>