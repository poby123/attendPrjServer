<%- include('./partials/header.ejs'); %>
  <section class="edit-content">
    <div class="edit-content-container">
      <form action="/board/view" method="get">
        일시 <input type="date" id="date" name="date" min="2020-01-01" max="2048-12-31">
        <select name="grade" id='gradeBox'>
          <option value="">선교회</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
        <br>
        <select name="class">
          <option value="">기관</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
          <option value="13">13</option>
          <option value="14">14</option>
          <option value="15">15</option>
        </select>
        <br>
        <button type="submit">조회</button>
      </form>
      <%
      if(results !== '' && results.length > 0){

        let classNum = 1;
        let firstClass = results[0].class;
        let d = new Date(results[0].regDate);
        let month = d.getMonth() + 1;

        for(;classNum<results.length;classNum++){
          if(results[classNum].class === firstClass){
            break;
          }
        }
      %>
      <h3><%=month%>월 데이터</h3>
      <table id="mainTable">
        <tbody>
       
        <th>낮모임 인원</th>
        <%
          for(let i=0;i<classNum;i++){
        %>
        <th><%=firstClass+i%>기관</th>
        <%
        }
        %>
          <th>합계</th>
        <%
        for(let i=0;i<results.length/classNum;i++){ //주차
          let sum = 0;
        %>
        <tr>
          <td><%=i+1%>주차</td>
          <%
            for(let j=0;j<classNum;j++){
              if(classNum*i+j < results.length && results[classNum*i+j].class == firstClass + j) {
                sum += results[classNum*i+j].meeting;
          %>
                <td><%=results[classNum*i+j].meeting%></td>
          <%  
              }
              else {
          %>
                <td>-</td>
          <%
              }
            }
          %>
          <td><%=sum%></td>
        </tr>
        <%
        }
        %>
      </tbody>
      
      </table>
      <iframe id="txtArea1" style="display:none"></iframe>
      <button onclick="ReportToExcelConverter()" style="width:200px">excel 다운</button>
      <%}else{%>
        <h5>데이터가 존재하지 않습니다.</h5>
      <%}%>
    </div>
  </section>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://kit.fontawesome.com/02656a2617.js"></script>
  <script src="/javascripts/jquery.table2excel.js" charset="utf-8"></script>
  <script src="/javascripts/assemble.js" charset="utf-8"></script>
  <script type="text/javascript">

  let msg = '<%=msg%>';
  if(msg !== '') {
    alert(msg);
    msg = '';
  }

  $('.deleteButton').click(function() {
    let id = $(this).attr('id');
    if (confirm('저장을 누르지 않고 확인을 누르시는 경우, 변경한 값이 저장되지 않고 초기화 됩니다. ' +
        id + '님을 정말로 삭제하시겠습니까? 취소를 누르시면 취소됩니다.')) {
      //location.href = "/admin/editUser/delete?target=" + id;
    } else {
      return;
    }
  });
  </script>
</body>

</html>
